{% assign collection = section.settings.collection %}
<div class = "container">
  <div class="product-main">
    {% for product in collections[collection].products limit: section.settings.product-number %}
        <div class = "product">
            <a href = {{ product.url }}>
              <div class = "over-flow reveal">
                  <img src="{{ product.featured_image.src | img_url:'master' }}" alt="{{ product.title }}">
                  <img class="hidden" src="{{ product.images.last | img_url: 'master' }}" alt="{{ product.images.last.alt | escape }}" />
              </div>
  
                 <h3 class="title">{{ product.title }}</h3>
                 <p class="price">{{ product.price | money }}</p>
               <div class="color-item">
                    <span class="t4s-pr-color__item bg_color_blue ">
                       <span class="t4s-pr-color__red ">Red</span>
                      <span class="t4s-pr-color__value bg_color_blue lazyloadt4sed"></span>
                    </span>
                      <span class="t4s-pr-color__item color-green ">
                       <span class="t4s-pr-color__green ">Green</span>
                        <span class="t4s-pr-color__value bg_color_blue lazyloadt4sed"></span>
                      </span>
                        <span class="t4s-pr-color__item color-gray">
                      <span class="t4s-pr-color__gray">Gray</span>
                      <span class="t4s-pr-color__value bg_color_blue lazyloadt4sed"></span>
                    </span>
                     <span class="t4s-pr-color__item color-pink">
                    <span class="t4s-pr-color__pink">Pink</span>
                    <span class="t4s-pr-color__value bg_color_blue lazyloadt4sed"></span>
                  </span>
                  <span class="t4s-pr-color__item color-yellow ">
                  <span class="t4s-pr-color__yellow">Yellow</span>
                  <span class="t4s-pr-color__value bg_color_blue lazyloadt4sed"></span>
                </span>
            
              </div>
              <div class="main-icon">
                <div class="wishlist">
                  <div class="wishlist-icon">
                    <span class="tooltip">Browser wishlist</span>
                   <i class="fa-regular fa-heart"></i>
                  </div>
              </div>
                <div class="quick-view">
