{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type":"collection",
        "id":"collection",
        "label":"collection"
      },
      {
       "id": "image",
      "type":"image_picker",
      "label" : "Image"
      },
       {
      "type": "range",
      "label": "Number of Products",
      "id": "product-number",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 6
